[Unit]
Description=DimDim Health Docker Compose Application
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/dimdim-health
ExecStartPre=/usr/bin/docker-compose -f deploy/docker-compose.yml pull -q --ignore-pull-failures
ExecStart=/usr/bin/docker-compose -f deploy/docker-compose.yml up -d
ExecStop=/usr/bin/docker-compose -f deploy/docker-compose.yml down
ExecReload=/usr/bin/docker-compose -f deploy/docker-compose.yml restart
TimeoutStartSec=300
TimeoutStopSec=90

# Restart policy
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
